{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/@types/*"],
    },
   "typeRoots" : ["./node_modules/@types", "./src/@types"],
  },
  "include": ["src/**/*.ts", "src/@types/**/*", "*.ts"],
  "exclude": ["node_modules", "dist"]
}
